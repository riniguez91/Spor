<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PaintActivity">

    <LinearLayout
        android:id="@+id/home_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/secondaryRed"
            android:theme="@style/Theme.Spor_TFG.CustomToolbar"/>

    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraint_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="65dp">

        <LinearLayout
            android:id="@+id/linearLayout3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/layout_bg"
            android:orientation="horizontal"
            android:paddingStart="10dp"
            android:paddingTop="5dp"
            android:paddingEnd="10dp"
            android:paddingBottom="5dp"
            app:layout_constraintBottom_toTopOf="@+id/dv_linear_layout"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/btn_undo"
                android:layout_width="52dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="15dp"
                android:layout_weight="1"
                android:contentDescription="@string/todo"
                android:src="@drawable/ic_undo"
                android:text="@string/undo" />

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/btn_save"
                android:layout_width="36dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="15dp"
                android:layout_weight="1"
                android:contentDescription="@string/todo"
                android:src="@drawable/save"
                android:text="@string/save" />

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/btn_color"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="15dp"
                android:layout_weight="1"
                android:contentDescription="@string/todo"
                android:src="@drawable/paint_brush"
                android:text="@string/color" />

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/btn_bin"
                android:layout_width="43dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="70dp"
                android:layout_weight="1"
                android:contentDescription="@string/todo"
                android:src="@drawable/bin_256"
                android:text="@string/bin" />

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/btn_single_anim"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:contentDescription="@string/todo"
                android:src="@drawable/single_animation"
                app:shapeAppearanceOverlay="@style/roundedImageViewRounded"
                android:text="@string/bin" />

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/vertical_line"
                android:layout_width="35dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:contentDescription="@string/todo"
                android:src="@drawable/vertical_line"
                android:text="@string/bin" />

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/btn_multi_anim"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="12dp"
                android:layout_weight="1"
                android:contentDescription="@string/todo"
                android:src="@drawable/multi_animation"
                app:shapeAppearanceOverlay="@style/roundedImageViewRounded"
                android:text="@string/bin" />

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/btn_multi_anim_done"
                android:layout_width="41dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:contentDescription="@string/todo"
                android:src="@drawable/done"
                android:text="@string/bin" />

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/vertical_line_2"
                android:layout_width="35dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:contentDescription="@string/todo"
                android:src="@drawable/vertical_line"
                android:text="@string/bin" />

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/btn_animation_color"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="15dp"
                android:layout_weight="1"
                android:contentDescription="@string/todo"
                android:src="@drawable/color_picker"
                android:text="@string/color" />

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/btn_play_anim"
                android:layout_width="41dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:contentDescription="@string/todo"
                android:src="@drawable/play"
                android:layout_marginEnd="70dp"
                android:text="@string/bin" />

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/btn_training_cone"
                android:layout_width="41dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:contentDescription="@string/todo"
                android:src="@drawable/training_cone"
                android:layout_marginEnd="15dp"
                android:text="@string/bin" />

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/btn_football"
                android:layout_width="41dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:contentDescription="@string/todo"
                android:src="@drawable/football"
                android:layout_marginEnd="15dp"
                android:text="@string/bin" />

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/btn_dummy"
                android:layout_width="41dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:contentDescription="@string/todo"
                android:src="@drawable/dummy"
                android:layout_marginEnd="15dp"
                android:text="@string/bin" />

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/btn_goal_net"
                android:layout_width="41dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:contentDescription="@string/todo"
                android:src="@drawable/soccer_goal_net"
                android:layout_marginEnd="15dp"
                android:text="@string/bin" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/dv_linear_layout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toTopOf="@+id/horizontalScrollView"
            app:layout_constraintEnd_toStartOf="@+id/linearLayout3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout3">

            <com.example.spor_tfg.DrawView
                android:id="@+id/draw_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <HorizontalScrollView
            android:id="@+id/horizontalScrollView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/dv_linear_layout">

            <LinearLayout
                android:id="@+id/players_ll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minHeight="80dp"
                android:orientation="horizontal"
                tools:ignore="UselessLeaf">
            </LinearLayout>
        </HorizontalScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigation_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        app:menu="@menu/home_navigation_drawer"
        app:headerLayout="@layout/nav_header"/>

</androidx.drawerlayout.widget.DrawerLayout>