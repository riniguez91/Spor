<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="20dp"
    android:layout_marginEnd="40dp"
    android:layout_marginBottom="40dp"
    android:background="@drawable/card_elevation"
    android:elevation="15dp">

    <TextView
        android:id="@+id/exercise_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/inter_bold"
        android:text="CONTINOUS RUNNING"
        android:maxWidth="340dp"
        android:textColor="@color/white"
        android:textSize="30sp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"
        android:background="@color/colorAccent"/>

    <TextView
        android:id="@+id/exercise_activation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_lightitalic"
        android:text="Specific Activation"
        android:textColor="@color/white"
        android:textSize="24sp"/>

    <TextView
        android:id="@+id/exercise_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_light"
        android:text="Low aerobic, low effort\n4x1000m"
        android:textColor="@color/white"
        android:textSize="24sp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"
        android:background="@color/colorAccent"/>

    <TextView
        android:id="@+id/exercise_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_bolditalic"
        android:text="Time: 5 mins"
        android:textColor="@color/white"
        android:textSize="24sp"/>

</LinearLayout>