<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="horizontal">
            <TextView
                android:id="@+id/video_editor_modal_upload"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Upload Video"
                android:textColor="@color/white"
                android:textSize="35sp"
                android:paddingTop="15dp"
                android:fontFamily="@font/nexa_light"
                app:drawableTopCompat="@drawable/ic_baseline_cloud_upload_24"
                android:drawablePadding="10dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="OR"
                android:textColor="@color/white"
                android:textSize="40sp"
                android:fontFamily="@font/nexa_bold"
                android:paddingStart="30dp"
                android:paddingEnd="30dp"
                android:layout_gravity="center"
                />
        <TextView
            android:id="@+id/video_editor_modal_load"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Load Video"
            android:textColor="@color/white"
            android:textSize="35sp"
            android:paddingTop="15dp"
            android:fontFamily="@font/nexa_light"
            app:drawableTopCompat="@drawable/ic_baseline_download_24"
            android:drawablePadding="10dp"/>

    </LinearLayout>

</RelativeLayout>