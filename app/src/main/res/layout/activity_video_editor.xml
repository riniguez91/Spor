<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/video_editor_drawer_layout"
    android:layout_height="match_parent"
    tools:context=".VideoEditorActivity">

    <LinearLayout
        android:id="@+id/video_editor_home_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/video_editor_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/secondaryRed"
            android:theme="@style/Theme.Spor_TFG.CustomToolbar"/>

        <LinearLayout
            android:id="@+id/linearLayout3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/layout_bg"
            android:orientation="horizontal"
            android:paddingStart="10dp"
            android:paddingTop="5dp"
            android:paddingEnd="10dp"
            android:paddingBottom="5dp"
            app:layout_constraintBottom_toTopOf="@+id/dv_linear_layout"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/btn_undo"
                android:layout_width="52dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="15dp"
                android:layout_weight="1"
                android:contentDescription="@string/todo"
                android:src="@drawable/ic_undo"
                android:text="@string/undo" />

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/btn_save"
                android:layout_width="36dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="15dp"
                android:layout_weight="1"
                android:contentDescription="@string/todo"
                android:src="@drawable/paint_brush"
                android:text="@string/save" />

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/btn_color"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="15dp"
                android:layout_weight="1"
                android:contentDescription="@string/todo"
                android:src="@drawable/paint_brush"
                android:text="@string/color" />

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/btn_bin"
                android:layout_width="43dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="15dp"
                android:layout_weight="1"
                android:contentDescription="@string/todo"
                android:src="@drawable/paint_brush"
                android:text="@string/bin" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/choose_video_ll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:translationZ="90dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/video_editor_modal_upload"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Upload Video"
                    android:textColor="@color/white"
                    android:textSize="35sp"
                    android:paddingTop="15dp"
                    android:fontFamily="@font/nexa_light"
                    app:drawableTopCompat="@drawable/ic_baseline_cloud_upload_24"
                    android:drawablePadding="10dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="OR"
                    android:textColor="@color/white"
                    android:textSize="40sp"
                    android:fontFamily="@font/nexa_bold"
                    android:paddingStart="30dp"
                    android:paddingEnd="30dp"
                    android:layout_gravity="center"
                    />
                <TextView
                    android:id="@+id/video_editor_modal_load"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Load Video"
                    android:textColor="@color/white"
                    android:textSize="35sp"
                    android:paddingTop="15dp"
                    android:fontFamily="@font/nexa_light"
                    app:drawableTopCompat="@drawable/ic_baseline_download_24"
                    android:drawablePadding="10dp"/>

            </LinearLayout>

            <VideoView
                android:id="@+id/videoView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="false"
                android:focusableInTouchMode="false" />

            <ProgressBar
                android:id="@+id/video_editor_pb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:indeterminate="true"
                android:indeterminateDrawable="@drawable/progress_bg"
                android:progress="0"
                android:visibility="invisible"
                android:layout_centerInParent="true">
            </ProgressBar>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:layout_margin="0dp"
            android:orientation="horizontal"
            android:baselineAligned="false">

            <ScrollView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:layout_weight="1"
                android:layout_gravity="center_vertical|top"
                android:layout_margin="20dp"
                android:background="@drawable/roundstyle">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/roundstyle_white_bg"
                        android:text="Attack (ATK)"
                        android:fontFamily="@font/nexa_light"
                        android:textSize="24sp"
                        android:gravity="center"
                        android:padding="5dp"
                        android:paddingStart="20dp"
                        android:paddingEnd="25dp"
                        android:drawablePadding="7dp"
                        android:layout_marginEnd="15dp"
                        app:drawableLeftCompat="@drawable/ic_baseline_close_24"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/nexa_bold"
                        android:paddingEnd="10dp"
                        android:text="- 3:01"
                        android:textAlignment="viewEnd"
                        android:textSize="24sp"
                        tools:ignore="RtlSymmetry" />
                </LinearLayout>

            </ScrollView>

            <ScrollView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:layout_margin="20dp">
                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:columnCount="2">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/roundstyle_white_bg"
                        android:text="Attack (ATK)"
                        android:fontFamily="@font/nexa_bold"
                        android:textSize="22sp"
                        android:gravity="center"
                        android:padding="5dp"
                        android:paddingStart="20dp"
                        android:paddingEnd="25dp"
                        android:layout_marginEnd="15dp"
                        android:layout_marginBottom="20dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/roundstyle_white_bg"
                        android:text="Defense (DEF)"
                        android:fontFamily="@font/nexa_bold"
                        android:textSize="22sp"
                        android:gravity="center"
                        android:padding="5dp"
                        android:paddingStart="20dp"
                        android:paddingEnd="25dp"
                        android:layout_marginBottom="20dp"
                        android:layout_marginEnd="15dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/roundstyle_white_bg"
                        android:text="Throw-in (TI)"
                        android:fontFamily="@font/nexa_bold"
                        android:textSize="22sp"
                        android:gravity="center"
                        android:padding="5dp"
                        android:paddingStart="20dp"
                        android:paddingEnd="25dp"
                        android:layout_marginBottom="20dp"
                        android:layout_marginEnd="15dp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/roundstyle_white_bg"
                        android:text="Handball (HB)"
                        android:fontFamily="@font/nexa_bold"
                        android:textSize="22sp"
                        android:gravity="center"
                        android:padding="5dp"
                        android:paddingStart="20dp"
                        android:paddingEnd="25dp"
                        android:layout_marginBottom="20dp"
                        android:layout_marginEnd="15dp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/roundstyle_white_bg"
                        android:text="Corner (COR)"
                        android:fontFamily="@font/nexa_bold"
                        android:textSize="22sp"
                        android:gravity="center"
                        android:padding="5dp"
                        android:paddingStart="20dp"
                        android:paddingEnd="25dp"
                        android:layout_marginBottom="20dp"
                        android:layout_marginEnd="15dp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/roundstyle_white_bg"
                        android:text="Goal Kick (GK)"
                        android:fontFamily="@font/nexa_bold"
                        android:textSize="22sp"
                        android:gravity="center"
                        android:padding="5dp"
                        android:paddingStart="20dp"
                        android:paddingEnd="25dp"
                        android:layout_marginBottom="20dp"
                        android:layout_marginEnd="15dp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/roundstyle_white_bg"
                        android:text="Foul (FOU)"
                        android:fontFamily="@font/nexa_bold"
                        android:textSize="22sp"
                        android:gravity="center"
                        android:padding="5dp"
                        android:paddingStart="20dp"
                        android:paddingEnd="25dp"
                        android:layout_marginBottom="20dp"
                        android:layout_marginEnd="15dp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/roundstyle_white_bg"
                        android:text="Free Kick (FK)"
                        android:fontFamily="@font/nexa_bold"
                        android:textSize="22sp"
                        android:gravity="center"
                        android:padding="5dp"
                        android:paddingStart="20dp"
                        android:paddingEnd="25dp"
                        android:layout_marginBottom="20dp"
                        android:layout_marginEnd="15dp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/roundstyle_white_bg"
                        android:text="Penalty (PY)"
                        android:fontFamily="@font/nexa_bold"
                        android:textSize="22sp"
                        android:gravity="center"
                        android:padding="5dp"
                        android:paddingStart="20dp"
                        android:paddingEnd="25dp"
                        android:layout_marginBottom="20dp"
                        android:layout_marginEnd="15dp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/roundstyle_white_bg"
                        android:text="Offside (OFF)"
                        android:fontFamily="@font/nexa_bold"
                        android:textSize="22sp"
                        android:gravity="center"
                        android:padding="5dp"
                        android:paddingStart="20dp"
                        android:paddingEnd="25dp"
                        android:layout_marginBottom="20dp"
                        android:layout_marginEnd="15dp" />
                </GridLayout>
            </ScrollView>

        </LinearLayout>

    </LinearLayout>


    <com.google.android.material.navigation.NavigationView
        android:id="@+id/video_editor_navigation_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        app:menu="@menu/home_navigation_drawer"
        app:headerLayout="@layout/nav_header">
    </com.google.android.material.navigation.NavigationView>
</androidx.drawerlayout.widget.DrawerLayout>